{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Vite Configuration */
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@config/*": ["./config/*"],
      "@hooks/*": ["./hooks/*"],
      "@modules/*": ["./modules/*"],
      "@pages/*": ["./pages/*"],
      "@utils/*": ["./utils/*"],
      "@routes/*": ["./routes/*"],
      "@helpers/*": ["./helpers/*"]
    }
  },
  "include": ["src", "src/lib.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
